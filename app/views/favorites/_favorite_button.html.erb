<% if current_user.fav?(micropost)%>
  <%= form_for(current_user.favorites.find_by(micropost_id: micropost), html: {method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'UnFavorite', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %> <!--micropost.idだとうまくいかなかった-->
    <%= f.submit 'Favorite', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>